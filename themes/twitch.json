{
    "$schema":"https://example.com/hospital-theme.schema.json",
    "name":"twitch-community","version":"1.0.0",
    "meta":{ "description":"Community & live event focus with bold purple","brandTone":["community","live","bold"],"fontsNote":"Rubik (Headings), Roboto (Body)" },
    "primitives":{
      "colors":{
        "white":"#FFFFFF","black":"#0F0F12",
        "gray":{"50":"#F8F8FF","100":"#F0F0FF","200":"#E2E1FF","300":"#CFCCFF","400":"#A9A3FF","500":"#7F77FF","600":"#5F58E6","700":"#4A45C2","800":"#373396","900":"#26246B"},
        "purple":{"50":"#F4F0FF","100":"#ECE4FF","200":"#DCCEFF","300":"#C2B1FF","400":"#AA94FF","500":"#9146FF","600":"#7B35F3","700":"#6728D6","800":"#4E1FAA","900":"#3A1780"},
        "green":{"500":"#22C55E"},"red":{"500":"#EF4444"}
      },
      "font":{
        "families":{"heading":"'Rubik', ui-sans-serif, system-ui, -apple-system, 'Segoe UI', Roboto, Arial","body":"'Roboto', ui-sans-serif, system-ui, -apple-system, 'Segoe UI', Arial","mono":"ui-monospace, Menlo, Consolas, monospace"},
        "sizes":{"xs":"0.75rem","sm":"0.875rem","base":"1rem","lg":"1.125rem","xl":"1.25rem","2xl":"1.5rem","3xl":"1.875rem","4xl":"2.25rem"},
        "weights":{"regular":400,"medium":500,"semibold":600,"bold":800},
        "lineHeights":{"tight":1.1,"snug":1.28,"normal":1.55,"relaxed":1.72}
      },
      "radii":{"xs":"4px","sm":"6px","md":"10px","lg":"14px","xl":"20px","pill":"9999px"},
      "spacing":{"0":"0px","1":"4px","2":"8px","3":"12px","4":"16px","5":"20px","6":"24px","8":"32px","10":"40px","12":"48px","16":"64px"},
      "shadows":{"sm":"0 1px 2px rgba(0,0,0,0.06)","md":"0 6px 16px rgba(0,0,0,0.1)","lg":"0 12px 28px rgba(0,0,0,0.14)","focusRing":"0 0 0 3px rgba(145,70,255,0.35)"},
      "breakpoints":{"sm":"640px","md":"768px","lg":"1024px","xl":"1280px","2xl":"1536px"}
    },
    "semantic":{
      "bg":{"base":"{primitives.colors.white}","subtle":"{primitives.colors.purple.50}","elevated":"{primitives.colors.white}"},
      "fg":{"primary":"{primitives.colors.black}","secondary":"{primitives.colors.gray.700}","muted":"{primitives.colors.gray.600}","onPrimary":"{primitives.colors.white}"},
      "border":{"subtle":"{primitives.colors.gray.200}","strong":"{primitives.colors.gray.300}","focus":"{primitives.colors.purple.400}"},
      "primary":{"default":"{primitives.colors.purple.500}","hover":"{primitives.colors.purple.600}","active":"{primitives.colors.purple.700}","mutedBg":"{primitives.colors.purple.50}","mutedFg":"{primitives.colors.purple.700}"},
      "success":{"default":"{primitives.colors.green.500}","mutedBg":"rgba(34,197,94,0.12)","mutedFg":"{primitives.colors.green.500}"},
      "warning":{"default":"#F59E0B","mutedBg":"rgba(245,158,11,0.12)","mutedFg":"#F59E0B"},
      "danger":{"default":"{primitives.colors.red.500}","mutedBg":"rgba(239,68,68,0.12)","mutedFg":"{primitives.colors.red.500}"},
      "elevation":{"card":"{primitives.shadows.md}","modal":"{primitives.shadows.lg}","popover":"{primitives.shadows.md}"}
    },
    "components":{
      "button":{"radius":"{primitives.radii.pill}","height":"44px","paddingX":"20px","font":{"family":"{primitives.font.families.heading}","size":"{primitives.font.sizes.base}","weight":"{primitives.font.weights.semibold}"},
        "variants":{"primary":{"bg":"{semantic.primary.default}","fg":"{semantic.fg.onPrimary}","hoverBg":"{semantic.primary.hover}","activeBg":"{semantic.primary.active}","focusRing":"{primitives.shadows.focusRing}"},
          "secondary":{"bg":"{semantic.bg.subtle}","fg":"{semantic.fg.primary}","border":"{semantic.border.strong}","hoverBg":"{semantic.bg.base}"},
          "ghost":{"bg":"transparent","fg":"{semantic.primary.default}","hoverBg":"{semantic.primary.mutedBg}"}
        }
      },
      "input":{"radius":"{primitives.radii.sm}","height":"42px","paddingX":"14px","bg":"{semantic.bg.base}","fg":"{semantic.fg.primary}","placeholder":"{primitives.colors.gray.500}","border":"{semantic.border.subtle}","focusBorder":"{semantic.border.focus}","focusRing":"{primitives.shadows.focusRing}"},
      "card":{"radius":"{primitives.radii.lg}","bg":"{semantic.bg.elevated}","fg":"{semantic.fg.primary}","shadow":"{semantic.elevation.card}","border":"{semantic.border.subtle}"}
    },
    "dataViz":{"palette":["#9146FF","#22C55E","#F59E0B","#EF4444","#38BDF8","#A78BFA"],"positive":"#22C55E","neutral":"#7F77FF","negative":"#EF4444"}
  }
  